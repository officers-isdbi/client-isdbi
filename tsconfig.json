{
	"files": [],
	"references": [
		{ "path": "./tsconfig.app.json" },
		{ "path": "./tsconfig.node.json" }
	],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@client/*": ["./src/*"],
			"#client/*": ["./src/components/*"],
			"$client/*": ["./src/api/*"],
			"$client": ["./src/api"],
			"&client/*": ["./src/config/*"],
			"@common/*": ["./common/*"],
			"!common/*": ["./common/types/*"],
			"^common/*": ["./common/validations/*"]
		}
	},
	"exclude": [
		"common/models",
		"common/types/generated",
		"common/services",
		"common/utils/backend"
	]
}
